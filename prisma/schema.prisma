generator client {
  provider = "prisma-client-js"
  output  = "../generated/prisma"

}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @default(autoincrement()) @id
  email String  @unique
  name  String?
  password String
  employee Employees[]
}

model EmployeeProject {
   id               Int                @id @default(autoincrement())
  employee    Employees @relation(fields: [employeeId], references: [id])
  employeeId  Int // Foreign key for the Employees model
  project     Projects  @relation(fields: [projectId], references: [id])
  projectId   Int // Foreign key for the Projects model

   // Use a composite primary key
}


model Projects {
  id               Int                @id @default(autoincrement())
  title            String
  // Relation back to the join table
  employeesOnProjects EmployeeProject[]
}


model Employees {
  id               Int                @id @default(autoincrement())
  name             String
  user             User               @relation(fields: [userId], references: [id])
  userId           Int                @unique
  // Relation back to the join table
  projectsOnEmployees EmployeeProject[]
}
